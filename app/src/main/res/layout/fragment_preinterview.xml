<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreinterviewFragment">

    <LinearLayout
        android:id="@+id/intro_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/intro_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Presage"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/intro_bullets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• The next page will record your response to an interview question\n• When you have read the question, press 'CHECKUP' to start"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Okay"/>
    </LinearLayout>

</FrameLayout>